{
  "name": "appbackend",
  "version": "1.0.0",
  "engines": {
    "node": ">=22.17.1"
  },
  "scripts": {
    "dev": "tsx --watch --env-file .env.dev src/main.ts",
    "build": "tsc -p tsconfig.build.json",
    "start": "node --env-file .env.prod dist/src/main.js",
    "start:prod": "npm run build && npm start",
    "test": "vitest",
    "test:run": "vitest --run",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "better-sqlite3": "^12.2.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^5.1.0"
  },
  "devDependencies": {
    "@tsconfig/node22": "^22.0.2",
    "@types/better-sqlite3": "^7.6.13",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^24.1.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/eslint-plugin": "^1.3.4",
    "prettier": "^3.6.2",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  }
